<Window x:Class="Milestone1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Milestone1"
        mc:Ignorable="d"
        Title="Yelp App" Height="450" Width="600">
    <Grid>
        <Label x:Name="cityLabel" Content="City" HorizontalAlignment="Left" FontSize="14" Margin="107,79,0,0" VerticalAlignment="Top"/>
        <Label x:Name="stateLabel" Content="State" HorizontalAlignment="Left" FontSize="14" Margin="107,29,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cityList" HorizontalAlignment="Left" FontSize="14" Margin="209,81,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cityList_SelectionChanged"/>
        <ComboBox x:Name="stateList" HorizontalAlignment="Left" FontSize="14" Margin="209,31,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="stateList_SelectionChanged"/>
        <DataGrid x:Name="businessGrid" FontSize="14" Margin="36,131,36,10" SelectionChanged="businessGrid_SelectionChanged"/>

    </Grid>
</Window>
